<h1 class="text-center"><%= link_to @user.username, user_path(@user) %> is Following: </h1>
<div class="col-md-10 col-md-offset-1">

  <% @followings.each do |following| %>
  <div class="col-md-4 followers">
    <div class="col-md-7">
      <%= image_tag following.avatar, class: "resize-image img-rounded" %>
    </div>
    <div class="col-md-5">
      <h4> <%= link_to following.username, following.github_url, class: "coloring" %></h4>
    </div>
  </div>
  <% end %>
</div>
