<div class="container">
  <div class="col-md-8 col-md-offset-2">

<h2 class="text-center"><%= @user.username %>'s Repositories</h2>

<% @repositories.each do |repo| %>
<div class="col-md-4">
  <h4><%= link_to repo.name, repo.url %></h4>
  <h5>Owner: <%= repo.owner %></h5>
</div>
<% end %>
</div>
</div>
