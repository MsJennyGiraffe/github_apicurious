<div class="col-md-12">

<div class="col-md-12">
  <div class="col-md-3 bottom">
    <img class="profile-resize img-rounded" src=<%= @user.avatar %>>
    <h3><%= @user.name %></h3>
    <h4><%= @user.username %></h4>
    <% if @user.email %>
    <h5><%= @user.email %></h5>
    <% end %>
  </div>

  <div class="col-md-9">
    <h4 class="repo-header">Popular Repositories</h4>
    <% @popular_repositories.each do |repo| %>
      <h5 class="repos"><%= link_to repo.name, repo.url %><span class="pull-right"> Stars: <%= repo.stars %></span></h5>
    <% end %>
  </div>
</div>

  <div class="col-md-3">
    <div>
      <a href= "<%= user_followers_path(@user) %>">
        <button class="btn btn-primary btn-block" type="button">
          See Followers <span class="badge"> <%= @followers.count %></span>
        </button>
      </a>
    </div>

    <div>
      <a href= "<%= user_followings_path(@user) %>">
        <button class="btn btn-info btn-block" type="button">
          See Followings <span class="badge"> <%= @followings.count %></span>
        </button>
      </a>
    </div>

    <div>
        <button class="btn btn-primary btn-block" type="button">
          Starred Repos <span class="badge"> <%= @starred_count%></span>
        </button>
      </a>
    </div>
  </div>

</div>
